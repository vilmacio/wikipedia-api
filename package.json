{
  "name": "wikipedia-api",
  "version": "1.0.0",
  "main": "dist/wikipedia-api.js",
  "license": "MIT",
  "scripts": {
    "test:verbose": "jest --detectOpenHandles --runInBand",
    "test": "npm run test:verbose -- --silent --noStackTrace",
    "test:unit": "npm run test -- -c jest.unit.config.js",
    "test:e2e": "npm run test -- -c jest.e2e.config.js",
    "test:staged": "npm run test -- --findRelatedTests ./tests/*.*",
    "test:ci": "npm run test -- --coverage"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "nock": "^13.0.5",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  }
}
